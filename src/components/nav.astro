---
import '../styles/components/nav.scss'

import Script from '../utils/script.astro'

var { siteDomain, items, direction, varient } = Astro.props
if (!!varient === false) varient = 'header'

items.forEach(function(item, i) {
    var name = item.name
    var url = item.url
    
    var target = item.target
    if (!!target === false) {
        target = '_self'
    }

    if (!!url) {
        if (url.includes('://')) {
            var domain = url.split('://')[1]
            if (domain.includes('/')) domain = domain.split('/')[0]
            if (domain !== siteDomain) {
                target = '_black'
            }
        }
    }
    else if (!!url === false) {
        url = '/'

        if (name !== 'Home') {
            url += name.toLowerCase()
        }
    }

    item.url = url
    item.target = target
    items[i] = item
})

var buttonsStr = ''

---
<nav class="nav" data-direction={direction} data-varient={varient}>
    {
        items.map((item, i) => {
            <button url={item.url} class="nav-btn">{item.name}</button>
        })
    }
</nav>
<Script name="nav">