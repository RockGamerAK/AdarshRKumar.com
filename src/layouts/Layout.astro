---
var sName = 'RockGamerAK / Adarsh Kumar'

var { title, pTitle, classItems } = Astro.props;

if (!!pTitle === false) pTitle = title
title = `${title} | ${sName}`

if (!!pTitle === false) pTitle = 'Home'
if (pTitle === 'Home') {
  title = title.split(' | ')[1]
}

if (!!classItems === false) classItems = ''

---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <base href="https://RockGamerAK.com" />
    <link rel="stylesheet" href="/main.css">
    <link rel="icon" href="RockGamerAK-Favicon.png">
    <link href="/root.css" rel="stylesheet" />
    <link href="/fire.css" rel="stylesheet" type="text/css"/>
    <link href="https://firecss.hecker40.repl.co/fire.css" rel="stylesheet" type="text/css"/>
    <script type='text/javascript' src='https://platform-api.sharethis.com/js/sharethis.js#property=625cc7f8cb9e7d001955b4a3&product=sop' async='async'></script>
  </head>
  <body>
    <header id="header">
      <a class="logo-link" href="/">
        <img class="logo" src="/Logo.png">
      </a>
      <nav class="nav">
				<a class="navigation-button" href="/">Home</a>
				<a class="navigation-button" href="/about">About</a>
				<a class="navigation-button" href="/contact">Contact</a>
				<a class="navigation-button" href="/projects">Projects</a>
				<a class="navigation-button" href="https://Blog.RockGamerAK.com" target="_blank">Blog</a>
				<a class="navigation-button" href="/sites">Sites</a>
				<a class="navigation-button" href="/videos">Videos</a>
      </nav>
    </header>
    <h1 id="page-title">{pTitle}</h1>
    <main id="content" align="center">
      <div id="main-content" class={classItems}>
        <slot />
      </div>
    </main>
    <script src="/main.js" is:inline></script>
    <!--Start of Tawk.to Script-->
