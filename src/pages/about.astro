---
import '../styles/pages/[about, contact].scss'

import Layout from '../layouts/Layout.astro'

var dob = {
  month: 3, 
  day: 28, 
  year: 2007, 
}

var date = new Date()
var currentDate = {
  month: date.getMonth(), 
  day: date.getDate(), 
  year: date.getFullYear(), 
}

let age = ''
if (
  (currentDate.month < dob.month) || 
  (
    currentDate.month === dob.month && 
    currentDate.day <= 28
  )
) age = currentDate.year - dob.year - 1
else age = currentDate.year - dob.year

---
<Layout title="About">
  <div class="about">
    <p>Hello, my name is Adarsh Kumar. I'm {age} years old, and a High School Student.</p>
    <p>I am good with software, so if you need tech help, let me know! I also enjoy history and geography.</p>
  </div>
</Layout>