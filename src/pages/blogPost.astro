---
import '../styles/pages/[about, contact].scss'
import '../styles/pages/post.scss'

import Layout from '../layouts/Layout.astro'

var postId = null
if (Astro.request.query) {
    if (Astro.request.query.id) postId = Astro.request.query.id
}

var content = {}
await fetch(`https://blogfeed.adarshrkumar.dev/getPost?path=${postId}`)
    .then(response => response.json())
    .then(json => {
        content = json
    })


---
<Layout title="Blog Post" pageType="post">
    {JSON.stringify(Astro.request.query)}
    <!-- {JSON.stringify(content)} -->
</Layout>