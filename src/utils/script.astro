---

var { name, inline } = Astro.props

---
{
    inline === 'true' ? (
        <script is:inline>
            <slot />
        </script>
    ) : (
        inline === 'false' ? (
            <script>
                <slot />
            </script>
        ) : <script src={`/scripts/${name}.js`} is:inline></script>
    )
}